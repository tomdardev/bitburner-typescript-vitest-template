{
  "include": [
    "NetscriptDefinitions.d.ts",
    "src/**/*",
    "node_modules/vitest/globals.d.ts"
  ],
  "module":"nodenext",
  "exclude": [
    "./build/"
  ],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "strict": true,
    "rootDir": "src/",
    "outDir": "dist/",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"],
      "@ns": ["../NetscriptDefinitions.d.ts"]
    }
  }
}
